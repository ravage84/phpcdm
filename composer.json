{
  "name": "vantoozz/php-density",
  "license": "MIT",
  "type": "library",
  "description": "PHP source code density meter",
  "authors": [
    {
      "name": "Ivan Nikitin",
      "email": "vantoozz@gmail.com"
    }
  ],
  "bin": [
    "bin/density"
  ],
  "require": {
    "symfony/console": "^3.3",
    "symfony/finder": "^3.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~3",
    "phploc/phploc": "~4",
    "sebastian/phpcpd": "~3",
    "phpmd/phpmd": "~2",
    "block8/php-docblock-checker": "~1",
    "jakub-onderka/php-parallel-lint": "~0",
    "phpstan/phpstan": "~0",
    "phpunit/phpunit": "~6",
    "codacy/coverage": "~1",
    "satooshi/php-coveralls": "~1",
    "povils/phpmnd": "~1",
    "mikey179/vfsStream": "~1"
  },
  "autoload": {
    "psr-4": {
      "Vantoozz\\Density\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vantoozz\\Density\\UnitTests\\": [
        "tests/unit/"
      ]
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "post-install-cmd": [
      "bash .githooks/setup.sh"
    ],
    "post-update-cmd": [
      "bash .githooks/setup.sh"
    ]
  }
}
